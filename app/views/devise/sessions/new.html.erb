
<div class="panel panel-default form-width col-md-offset-2">
<div class="panel-heading">
<h1 class="panel-title">Sign in</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="form-inputs panel-body">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control'} %>
    <%= f.input :password, required: false, input_html: { class: 'form-control'} %>
    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-inline' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions panel-footer">
    <%= f.button :submit, "Sign in", class: 'btn btn-success' %>
    <%= link_to "Forgot your password?", new_user_password_path %>
  </div>
<% end %>
</div>	<!-- END OF PANEL -->


